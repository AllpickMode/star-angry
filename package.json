{
  "name": "star-angry",
  "version": "0.0.0",
  "description": "A space warfare game titled \"Star Angry\"",
  "private": true,
  "packageManager": "pnpm@8.14.1",
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "scripts": {
    "prepare": "husky",
    "commit": "git add . && git-cz",
    "format": "prettier --write . --cache",
    "lint": "eslint --fix . --cache",
    "lint:staged": "lint-staged",
    "dev:game": "pnpm --filter @star-angry/game dev",
    "dev:backend": "pnpm --filter @star-angry/backend dev",
    "build:game": "pnpm --filter @star-angry/game build",
    "build:backend": "pnpm --filter @star-angry/backend build"
  },
  "keywords": [
    "star",
    "game"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@star-angry/api": "workspace:^",
    "@star-angry/db": "workspace:^",
    "@star-angry/shared": "workspace:^",
    "axios": "^1.7.7",
    "dotenv": "^16.4.5",
    "pinia": "^2.2.6",
    "uuid": "^11.0.2"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@typescript-eslint/eslint-plugin": "^6.20.0",
    "@typescript-eslint/parser": "^6.20.0",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-define-config": "^2.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vue": "^9.21.1",
    "happy-dom": "^13.3.8",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.1",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.6.3",
    "vitest": "^1.3.0"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "lint-staged": {
    "*.{vue,js,ts,jsx,tsx,json}": "eslint --fix"
  }
}
